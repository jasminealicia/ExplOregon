<% include ../partials/header %>

<h1 class="edit">Edit <%= location.name %></h1>
<div class="row">
    <div class="edit-form">
        <form action="/locations/<%= location._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" type="text" name="name" id="name" value="<%= location.name %>">
            </div>
            <div class="form-group">
                <label for="name">Image URL</label>
                <input class="form-control" type="text" name="image" id="image" value="<%= location.image %>">
            </div>
            <div class="form-group">
                <label for="name">Description</label>
                <input class="form-control" type="text" name="description" id="description" value="<%= location.description %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-block btn-success">Submit</button>
            </div>
        </form>
        <a href="/locations">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>
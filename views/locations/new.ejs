<% include ../partials/header %>

<h1 class="new">Add your Favorite Site</h1>
<div class="row">
    <div class="new-form">
        <form action="/locations" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" type="text" name="name" id="name" placeholder="Crater Lake">
            </div>
            <div class="form-group">
                <label for="image">Image URL</label>
                <input class="form-control" type="text" name="image" id="image" placeholder="image url" required>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input class="form-control" type="text" name="description" id="description" placeholder="Crater Lake was found in...">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-block btn-success">Submit</button>
            </div>
        </form>
        <a href="/locations">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>
<% include ../partials/header %>

<h1 class="edit-comment">Edit Comment</h1>
<div class="row">
    <div class="edit-comment-form">
        <form action="/locations/<%= location_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="text" value="<%= comment.text %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="author" value="<%= comment.author %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-success btn-block">Submit</button>
            </div>
        </form>
        <a href="/locations">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>
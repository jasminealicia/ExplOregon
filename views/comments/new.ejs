<% include ../partials/header %>

<h1 class="new-comment">Add New Comment to <%= location.name %></h1>
<div class="row">
    <div class="new-comment-form">
        <form action="/locations/<%= location._id %>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="text" placeholder="text">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-success btn-block">Submit</button>
            </div>
        </form>
        <a href="/locations">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>